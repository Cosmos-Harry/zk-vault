{
  "manifest_version": 3,
  "name": "ZK Vault",
  "version": "0.1.3",
  "description": "Privacy-preserving identity verification using zero-knowledge proofs. Prove claims about yourself without revealing personal data.",
  "permissions": [
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "host_permissions": [
    "https://*.google.com/*",
    "https://www.googleapis.com/*",
    "http://ip-api.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/inject-api.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["wasm/*.wasm", "wasm/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
